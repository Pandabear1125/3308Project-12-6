<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0">
    <title>chess clock</title>

    <style>



        .player {
            margin: 1em 0 5px 0;
            display: flex;
            flex-direction: row;
        }

        .player__tile {
            width: calc(50% - 20px);
            height: 50px;
            display: flex;
            margin: 0 auto;
            color: #000000;
            max-width: 200px;
            border-radius: 8px;
            justify-content: center;
            background-color: #838383;
            box-shadow: inset 3px 3px 0 #000,
                        inset -3px 3px 0 black,
                        inset -3px -3px 0 black,
                        inset 3px - 3px 0 black;
        }

        .player-2 {
            color: #FFFFFF;
            margin-top: 5px;
            background-color: #2D2C2C;
        }

        .player__digits {
            font-size: 2rem;
            font-weight: bold;
        }

        .timer__buttons {
            margin-bottom: 1em;
        }

        .timer__start-bttn, .timer__reset-bttn {
            width: 100%;
            display: block;
            color: #020202;
            min-height: 10px;
            max-width: 200px;
            font-size: 1.5rem;
            font-weight: bold;
            border-radius: 8px;
            letter-spacing: 2px;
            margin: 0 auto 5px auto;
            border: 4px solid #000000;
        }

        .timer__start-bttn:hover {
            color: #000000;
            background-color: #0071d5;
        }

        .timer__reset-bttn:hover {
            color: #FFFFFF;
            background-color:  #0071d5;
        }

        footer p {
            text-align: center;
        }

    </style>

  </head>

  <body>

    <main>
    
      <div class="player">
      
        <div class="player__tile player-1">
          <div class="player__digits">
            <span id="min1">10</span>:<span id="sec1">00</span>
          </div>
        </div>
        
        <div class="player__tile player-2">
          <div class="player__digits">
            <span id="min2">10</span>:<span id="sec2">00</span>
          </div>
        </div>
        
      </div>
      
      <div class="timer__buttons">
        <button class="timer__start-bttn bttn" type="button">SWITCH</button>
        <button class="timer__reset-bttn bttn" type="button">RESET</button>
      </div>

    </main>

    <footer>

      <p>click on timer after a move to switch player's clock.</p>

    </footer>

    {{> chessBoard}}

   <script>
    // JavaScript code for the timer
    let min1 = 10;
    let sec1 = 0;
    let min2 = 10;
    let sec2 = 0;
    let timerInterval;

    function startTimer() {
      timerInterval = setInterval(updateTimer, 1000);
    }

    function updateTimer() {
      if (min1 == 0 && sec1 == 0) {
        clearInterval(timerInterval);
        return;
      }

      sec1--;
      if (sec1 < 0) {
        sec1 = 59;
        min1--;
      }

      document.getElementById('min1').innerText = padZero(min1);
      document.getElementById('sec1').innerText = padZero(sec1);
    }

    function padZero(num) {
      return num.toString().padStart(2, '0');
    }

    function switchPlayer() {
      clearInterval(timerInterval);
      startTimer();
    }

    function resetTimer() {
      clearInterval(timerInterval);
      min1 = 10;
      sec1 = 0;
      document.getElementById('min1').innerText = padZero(min1);
      document.getElementById('sec1').innerText = padZero(sec1);
    }

    // Start the timer when the page loads
    startTimer();
  </script>

  </body>

</html>